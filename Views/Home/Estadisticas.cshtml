@{
    ViewData["Title"] = "Estadísticas";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: #f5f9ff;
        padding: 20px;
    }

    .container-card {
        background: white;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0px 4px 12px rgba(0,0,0,0.1);
        max-width: 1000px;
        margin: auto;
    }

    .title {
        font-size: 26px;
        font-weight: 600;
        margin-bottom: 15px;
    }

    select, input, button {
        padding: 10px;
        border-radius: 6px;
        border: 1px solid #ccc;
        margin-bottom: 10px;
        width: 100%;
        font-size: 14px;
    }

    button {
        background: #007bff;
        color: white;
        font-weight: 600;
        cursor: pointer;
        border: none;
    }

        button:hover {
            background: #0056b3;
        }

    .stat-box {
        background: #eef4ff;
        padding: 10px;
        border-radius: 6px;
        margin-bottom: 8px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
    }

        table th {
            background: #e6f0ff;
            padding: 10px;
            font-weight: 600;
        }

        table td {
            padding: 8px;
            border-bottom: 1px solid #eee;
        }

    .btn-back {
        background: #6c757d;
        margin-bottom: 10px;
    }

        .btn-back:hover {
            background: #565e64;
        }
</style>

<div class="container-card">
    <button class="btn-back" onclick="window.location='/'">← Volver a Gráficos</button>
    <div class="title">📊 Estadísticas de Uso</div>

    <label><b>Laboratorio:</b></label>
    <select id="labSelect" onchange="cargarEquipos()">
        <option value="bio">Bioquímica</option>
        <option value="hema">Hematología</option>
    </select>

    <label><b>Equipo:</b></label>
    <select id="equipoSelect"></select>

    <label><b>Fecha:</b></label>
    <input type="date" id="fechaInicio">
    <input type="date" id="fechaFin">

    <button onclick="consultar()">Consultar</button>
    <div id="resultado"></div>
    <div id="tabla"></div>
</div>

<script>
    const equipos = {
        bio:[
            {id:"00000001",nombre:"Analizador"},
            {id:"00000002",nombre:"Agitador"}
        ],
        hema:[
            {id:"00000001",nombre:"Microscopio"},
            {id:"00000002",nombre:"Centrífuga"}
        ]
    };

    function cargarEquipos() {
        let lab=document.getElementById("labSelect").value;
        let sel=document.getElementById("equipoSelect");
        sel.innerHTML="";
        equipos[lab].forEach(e => sel.innerHTML+=`<option value="${e.id}">${e.nombre}</option>`);
    }

    // ✅ valores predeterminados: ayer
    let hoy=new Date();
    let ayer=new Date(); ayer.setDate(hoy.getDate()-1);
    let f=ayer.toISOString().split("T")[0];
    document.getElementById("fechaInicio").value=f;
    document.getElementById("fechaFin").value=f;

    cargarEquipos(); // set equipos default
    async function consultar(){
        let disp=document.getElementById("equipoSelect").value;
        let fi=document.getElementById("fechaInicio").value;
        let ff=document.getElementById("fechaFin").value;

        let r=await fetch(`/api/Estadisticas/dia?dispositivo=${disp}&fechaInicio=${fi}&fechaFin=${ff}`);
        let d=await r.json();

        document.getElementById("resultado").innerHTML=`
            <div class="stat-box"><b>Fecha:</b> ${fi} → ${ff}</div>
            <div class="stat-box"><b>Encendidos:</b> ${d.encendidos}</div>
            <div class="stat-box"><b>Apagados:</b> ${d.apagados}</div>
            <div class="stat-box"><b>Tiempo Total Encendido:</b> ${d.tiempoUso}</div>
        `;

        let html=`
        <h3 style="margin-top:20px;">Historial</h3>
        <table>
        <tr><th>Hora</th><th>Potencia (W)</th><th>Estado</th><th>Tiempo Encendido</th></tr>
        `;

        d.historial.forEach(r=>{
            html+=`<tr>
            <td>${r.hora}</td>
            <td>${r.potencia}</td>
            <td>${r.estado}</td>
            <td>${r.tiempoUso || "-"}</td>
            </tr>`;
        });

        html+="</table>";
        document.getElementById("tabla").innerHTML=html;
    }

    consultar(); // ✅ cargar al abrir
</script>
